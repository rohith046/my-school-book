            "projectUrl": "{{pathPreinstalledPayloads}}Color Correction.prproj",
            "sizeBytes": "123456789",
            "minVersion": "13.0.2",
            "additionalAssets": [],
            "steps": [
                {
                    "stepActionsOnShow": [
                        {
                            "actionName": "openSequenceByName",
                            "payload": {
                                "sequenceName": "My Sequence"
                            }
                        }
                    ],
                    "stepItems": [
                        {
                            "type": "video",
                            "videoUrl": "{{pathPanelPayloadsWithKey}}open-lumetri-panel.mp4",
                            "autoplay": true,
                            "loop": true
                        },
                        {
                            "type": "heading",
                            "text": "Das Lumetri-Farbfeld"
                        },
                        {
                            "type": "text",
                            "text": "Bei einer <$Farbkorrektur$> passen Sie die Farben Ihrer Clips an, bis sie den vom menschlichen Auge wahrgenommenen Farben so genau wie möglich entsprechen."
                        },
                        {
                            "type": "text",
                            "text": "Am einfachsten können Sie den Look Ihrer Clips in Premiere Pro verbessern, indem Sie das <$Lumetri-Farbfeld$> verwenden."
                        },
                        {
                            "type": "listSubsteps",
                            "listItems": [
                                {
                                    "text": "Klicken Sie im Anwendungsmenü auf <$Fenster > Lumetri-Farbe$>.",
                                    "checkUserInteractions": [
                                        {
                                            "check": "isPanelOpen",
                                            "payload": {
                                                "panelName": "Color"
                                            }
                                        }
                                    ],
                                    "showOnComplete": {
                                        "heading": "Erfolgreich!",
                                        "texts": [
                                            "Sie haben gerade das Lumetri-Farbfeld auf der rechten Seite der Benutzeroberfläche geöffnet. Das Farbfeld enthält zahlreiche Anpassungseinstellungen, mit denen Sie das Aussehen und die Farbe Ihrer Clips verbessern können. Möglicherweise müssen Sie die Größe einiger Fenster anpassen, damit genügend Platz für das Farbfeld vorhanden ist."
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "stepItems": [
                        {
                            "type": "video",
                            "videoUrl": "{{pathPanelPayloadsWithKey}}change-white-balance.mp4",
                            "autoplay": true,
                            "loop": true
                        },
                        {
                            "type": "heading",
                            "text": "Anpassen von Weißabgleich"
                        },
                        {
                            "type": "text",
                            "text": "Die blaue Färbung von Clip 3 können Sie korrigieren, indem Sie den Weißabgleich des Clips anpassen."
                        },
                        {
                            "type": "listSubsteps",
                            "listItems": [
                                {
                                    "text": "Klicken Sie in der Spur V1 des Schnittfensters auf <$Clip 3$>, um den Clip auszuwählen, und bewegen Sie den Abspielkopf darüber, sodass Sie den Clip im Programmmonitor sehen können.",
                                    "checkUserInteractions": [
                                        {
                                            "check": "isClipSelected",
                                            "payload": {
                                                "clipName": "Clip 3"
                                            }
                                        },
                                        {
                                            "check": "isCtiOverClip",
                                            "payload": {
                                                "clipName": "Clip 3"
                                            }
                                        }
                                    ]
                                },
                                {
                                    "text": "Klicken Sie im <$Lumetri-Farbfeld$> auf den Abschnitt <$Einfache Korrektur$>, um die Optionen zu erweitern."
                                },
                                {
                                    "text": "Klicken Sie auf die <$Pipette$> neben der <$WB-Auswahl$> und dann im Programmmonitorfenster auf die weißen Wolken.",
                                    "checkUserInteractions": [
                                        {
                                            "check": "checkClipComponent",
                                            "payload": {
                                                "clipName": "Clip 3",
                                                "componentName": "lumetri",
                                                "componentParameter": "LUMETRI_WHITE_BALANCE_TEMPERATURE_PARAMINDEX",
                                                "value": [
                                                    1,
                                                    35
                                                ]
                                            }
                                        },
                                        {
                                            "check": "checkClipComponent",
                                            "payload": {
                                                "clipName": "Clip 3",
                                                "componentName": "lumetri",
                                                "componentParameter": "LUMETRI_WHITE_BALANCE_TINT_PARAMINDEX",
                                                "value": [
                                                    -25,
                                                    -1
                                                ]
                                            }
                                        }
                                    ],
                                    "showOnComplete": {
                                        "heading": "Erfolgreich!",
                                        "texts": [
                                            "Sie haben gerade die blaue Färbung entfernt, indem Sie den Weißabgleich des Clips angepasst haben, und dabei die Wolken als Referenzpunkt verwendet. Sehen Sie die Änderung? Beachten Sie, wie sich die gesamten Temperatur- und Farbtonwerte im Lumetri-Farbfeld geändert haben. Passen Sie den Weißabgleich und den Farbton manuell an, bis das Aussehen Ihren Wünschen entspricht."
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "stepItems": [
                        {
                            "type": "video",
                            "videoUrl": "{{pathPanelPayloadsWithKey}}adjust-look-and-feel.mp4",
                            "autoplay": true,
                            "loop": true
                        },
                        {
                            "type": "heading",
                            "text": "Kreativität mit Farbe"
                        },
                        {
                            "type": "text",
                            "text": "Der Stil und das Aussehen dieses Films stehen Ihnen völlig frei. Werden Sie kreativ und verwenden Sie die unterschiedlichen Einstellungen des Lumetri-Farbfelds, um den Look-and-Feel der Clips anzupassen."
                        },
                        {
                            "type": "text",
                            "text": "Folgendes können Sie auch versuchen:"
                        },
                        {
                            "type": "listSubsteps",
                            "listItems": [
                                {
                                    "text": "Ändern Sie die einzelnen Grundeinstellungen, um festzustellen, wie sie sich auf die verschiedenen Aspekte des Clips auswirken.",
                                    "checkUserInteractions": [
                                        {
                                            "check": "areClipComponentsChanged",
                                            "payload": {
                                                "clipName": "Clip 3",
                                                "componentName": "lumetri",
                                                "componentParameters": [
                                                    "LUMETRI_WHITE_BALANCE_TEMPERATURE_PARAMINDEX",
                                                    "LUMETRI_WHITE_BALANCE_TINT_PARAMINDEX",
                                                    "LUMETRI_TONE_EXPOSURE_PARAMINDEX",
                                                    "LUMETRI_TONE_CONTRAST_PARAMINDEX",
                                                    "LUMETRI_TONE_HIGHLIGHTS_PARAMINDEX",
                                                    "LUMETRI_TONE_SHADOWS_PARAMINDEX",
                                                    "LUMETRI_TONE_WHITES_PARAMINDEX",
                                                    "LUMETRI_TONE_BLACKS_PARAMINDEX",
                                                    "LUMETRI_PRESENCE_SATURATION_PARAMINDEX"
                                                ]
                                            }
                                        }
                                    ]
                                },
                                {
                                    "text": "Erkunden Sie die unterschiedlichen „Looks“ mit den Einstellungen im Bereich <$Kreativ$>.",
                                    "checkUserInteractions": [
                                        {
                                            "check": "checkClipComponent",
                                            "payload": {
                                                "clipName": "Clip 3",
                                                "componentName": "lumetri",
                                                "componentParameter": "LUMETRI_LOOK_PRESET_POPUP_PARAMINDEX",
                                                "value": [
                                                    1,
                                                    200
                                                ]
                                            }
                                        }
                                    ]
                                },
                                {
                                    "text": "Erstellen Sie unter <$Farbräder und Farbabgleich$> Farbdarstellungen.",
                                    "checkUserInteractions": [
                                        {
                                            "check": "areClipComponentsChanged",
                                            "payload": {
                                                "clipName": "Clip 3",
                                                "componentName": "lumetri",
                                                "componentParameters": [
                                                    "LUMETRI_COLORWHEELS_PARAMINDEX"
                                                ]
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "stepItems": [
                        {
                            "type": "endScreen",
                            "successHeading": "Herzlichen Glückwunsch!",
                            "successText": "Sie haben gerade gelernt, wie Sie den Look Ihres Projekts mithilfe des Lumetri-Farbfelds anpassen. Damit ist die Tutorialreihe „Kreative und stilistische Bearbeitungen“ abgeschlossen.",
                            "additionalInfo": "Um einen genauen Überblick über dieses und andere Themen zu erhalten, sehen Sie sich die vollständige Tutorialreihe <a href=\"https://helpx.adobe.com/de/premiere-pro/tutorials.html\">Erste Schritte mit Premiere Pro CC</a> auf adobe.com an."
                        }
                    ]
                }
            ]
        }
    }
